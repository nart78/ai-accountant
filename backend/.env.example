# Application Settings
APP_NAME="AI Accountant"
APP_VERSION="0.1.0"
DEBUG=True
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ai_accountant
DATABASE_ECHO=False

# API Keys
ANTHROPIC_API_KEY=your_claude_api_key_here
OPENAI_API_KEY=your_openai_api_key_here  # Optional: for GPT-4 Vision OCR

# Accounting API Integration
WAVE_API_KEY=your_wave_api_key_here
WAVE_BUSINESS_ID=your_wave_business_id_here

# Alternative: QuickBooks (if preferred)
# QUICKBOOKS_CLIENT_ID=your_quickbooks_client_id
# QUICKBOOKS_CLIENT_SECRET=your_quickbooks_client_secret
# QUICKBOOKS_REALM_ID=your_company_id

# Payroll API (Wagepoint or Rise)
PAYROLL_API_KEY=your_payroll_api_key_here
PAYROLL_COMPANY_ID=your_company_id_here

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Storage
UPLOAD_DIR=../uploads/documents
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=pdf,png,jpg,jpeg,csv,xlsx

# Canadian Tax Settings
TAX_YEAR=2024
GST_FILING_FREQUENCY=quarterly  # monthly, quarterly, or annual
PROVINCE=ON  # Province code for provincial tax rates

# Redis (for background tasks)
REDIS_URL=redis://localhost:6379/0

# Email Notifications (for reminders)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
NOTIFICATION_EMAIL=your_email@gmail.com

# AI Processing Settings
AI_MODEL=claude-sonnet-4-5-20250929
AI_TEMPERATURE=0.1  # Lower for more consistent categorization
AI_MAX_TOKENS=4000

# Logging
LOG_LEVEL=INFO
